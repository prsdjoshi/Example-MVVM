<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">



  <RelativeLayout
      android:id="@+id/item_emp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackground"
      android:padding="15dp">


    <ImageView
        android:id="@+id/image_emp"
        android:layout_width="80dp"
        android:background="@color/colorAccent"
        android:layout_height="80dp"
        />


    <TextView
        android:id="@+id/label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_emp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/image_emp"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="mr gary allen"/>

    <TextView
        android:id="@+id/label_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/label_name"
        android:layout_below="@+id/label_name"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        tools:text="0729-256-147"/>

    <TextView
        android:id="@+id/label_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/label_salary"
        android:layout_below="@+id/label_salary"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        tools:text="gary.allen@example.com"/>

  </RelativeLayout>


</RelativeLayout>